<%= render 'shared/alerti' %>
<div class="row">
<%= render 'shared/left_sidebar_admin' %>
<div class="col-lg-9">
<div class="apple_pagination">
<h1><%= @pitanje.name %></h1>
</div>	
<div class="apple_pagination">
<%= will_paginate @komentari %>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th>ID</th>
      <th>KOMENTAR</th>
    </tr>
  </thead>
  <tbody>
    <% @komentari.each do |komentar| %>
      <tr>
        <td><%= komentar.id %></td>
        <td><%= komentar.name %></td>
        <td>	
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      komentar_path(komentar),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Da li ste sigurni?')) },
                      :class => 'btn btn-mini btn-danger' %>
        </td>        
      </tr>
    <% end %>
  </tbody>
</table>
<div class="apple_pagination">
<%= will_paginate @komentari %>
</div>
</div>
</div>