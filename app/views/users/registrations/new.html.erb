<%= render 'shared/slajder' %>
<div class="row">
<%= render 'shared/left_sidebar' %>

<div class="col-lg-5 col-md-5">
<div class="well bs-component">
<legend>Registrujte se</legend>
<%= form_for(resource, as: resource_name, url: registration_path(resource_name), :html => { :class => 'form-horizontal' }) do |f| %>
  <%= devise_error_messages! %>
  <div class="form-group">
  	<%= f.label :email, :class => 'col-lg-2 col-md-2 control-label' %>
    <div class="col-lg-10 col-md-10">
      <%= f.email_field :email, autofocus: true, :class => 'form-control' %>
    </div>
    </div>
  <div class="form-group">
  	<%= f.label "Korisničko ime", :class => 'col-lg-2 col-md-2 control-label' %>
    <div class="col-lg-10 col-md-10">
      <%= f.text_field :username, autofocus: true, :class => 'form-control' %>
    </div>
  </div>
  <div  class="form-group">
	<%= f.label :password, :class => 'col-lg-2 col-md-2 control-label' %>
    <div class="col-lg-10 col-md-10">
      <%= f.password_field :password, autocomplete: "off", :class => 'form-control' %>
    </div>
  </div>
  <div  class="form-group">
	<%= f.label :password_confirmation, :class => 'col-lg-2 col-md-2 control-label' %>
    <div class="col-lg-10 col-md-10">
      <%= f.password_field :password_confirmation, autocomplete: "off", :class => 'form-control' %>
    </div>
  </div>  
  <div class="form-group">
  <div class="col-lg-10 col-lg-offset-2 col-md-10 col-md-offset-2">
  	<%= f.submit "Kreiraj nalog", :class => 'btn btn-primary' %>
  </div>	
  </div>
  <%= render "users/shared/links" %>
<% end %>
</div>
</div>
<%= render 'shared/right_sidebar' %>   
</div>

