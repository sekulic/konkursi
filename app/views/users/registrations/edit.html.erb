<%= render 'shared/slajder' %>
<div class="row">
<%= render 'shared/left_sidebar' %>

<div class="col-lg-5 col-md-5">
<div class="well bs-component">
<legend>Moj nalog</legend>
<%= form_for(resource, as: resource_name, url: registration_path(resource_name), method: :put, html: { class: "form-horizontal" }) do |f| %>
  <%= devise_error_messages! %>

  <div class="form-group">
  	<%= f.label :email, :class => 'col-lg-9 col-lg-offset-2 col-md-9 col-md-offset-2 control-label' %>
    <div class="col-lg-9 col-lg-offset-2 col-md-9 col-md-offset-2">
      <%= f.email_field :email, autofocus: true, :class => 'form-control' %>
    </div>
  </div>
  <div class="form-group">
  	<%= f.label :username, :class => 'col-lg-9 col-lg-offset-2 col-md-9 col-md-offset-2 control-label' %>
    <div class="col-lg-9 col-lg-offset-2 col-md-9 col-md-offset-2">
      <%= f.text_field :username, autofocus: true, :class => 'form-control' %>
    </div>
  </div>
  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Čeka se potvrda za: <%= resource.unconfirmed_email %></div>
  <% end %>
  <div  class="form-group">
	<%= f.label :password, :class => 'col-lg-9 col-lg-offset-2 col-md-9 col-md-offset-2 control-label' %>
    <div class="col-lg-9 col-lg-offset-2 col-md-9 col-md-offset-2">
      <%= f.password_field :password, autocomplete: "off", :placeholder => "Ostavite prazno ako ne želite da menjate", :class => 'form-control' %>
    </div>
  </div>
  <div  class="form-group">
	<%= f.label :password_confirmation, :class => 'col-lg-9 col-lg-offset-2 col-md-9 col-md-offset-2 control-label' %>
    <div class="col-lg-9 col-lg-offset-2 col-md-9 col-md-offset-2">
      <%= f.password_field :password_confirmation, autocomplete: "off", :class => 'form-control' %>
    </div>
  </div>

  <div  class="form-group">
	<%= f.label :current_password, :class => 'col-lg-9 col-lg-offset-2 col-md-9 col-md-offset-2 control-label' %>
    <div class="col-lg-9 col-lg-offset-2 col-md-9 col-md-offset-2">
      <%= f.password_field :current_password, autocomplete: "off", :placeholder => "Unestite trenutnu šifru za promenu", :class => 'form-control' %>
    </div>
  </div>
  

  <div  class="form-group">
    <div class="col-lg-9 col-lg-offset-2 col-md-9 col-md-offset-2">
      <%= f.submit "Izmeni", :class => 'btn btn-primary' %>
    </div>
  </div>
  
<% end %>
<div  class="form-horizontal">
<legend>Želite da izbrišete nalog?</legend>
  <div  class="form-group">
    <div class="col-lg-9 col-lg-offset-2 col-md-9 col-md-offset-2">
      <%= button_to "Izbriši nalog", registration_path(resource_name), data: { confirm: "Da li ste sigurni?" }, method: :delete, :class => "btn btn-danger"  %>
    </div>
  </div>

  <div  class="form-group">
    <div class="col-lg-9 col-lg-offset-2 col-md-9 col-md-offset-2">
      <%= link_to "Nazad", :back %>
    </div>
  </div> 
</div>
</div>
</div>
<%= render 'shared/right_sidebar' %>   
</div>

